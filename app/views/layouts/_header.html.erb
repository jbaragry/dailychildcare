<div id="header" class="round">
  <%= link_to logo, root_path %>
  <ul class="navigation round">
    <li><%= link_to t(:home), root_path %></li>
    <% if signed_in? %>
    <li><%= link_to t(:users), users_path %></li>
     <li><%= link_to t(:departments), departments_path %></li>
    <li><%= link_to t(:profile), current_user %></li>
    <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
    <% end %>
    <li><%= link_to t(:help), help_path %></li>
    <% if signed_in? %>
    <li><%= link_to t(:signout), signout_path, :method => :delete %></li>
    <% else %>
    <li><%= link_to t(:signin), signin_path %></li>
    <% end %>
  </ul>
</div>
